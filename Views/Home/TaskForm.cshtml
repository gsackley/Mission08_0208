@{
    ViewData["Title"] = "Task Form";
}
@model Mission08_0208.Models.Task_

<img src="~/img/matrix.png" /><br />

<h3>Enter Your Task</h3>

<div>
    <form method="post">
        <input type="hidden" asp-for="TaskId"/>

        <label asp-for="TaskName">Task:</label>
        <input asp-for="TaskName" /><br />

        <label asp-for="DueDate">Due Date:</label>
        <input type="date" asp-for="DueDate" /><br />

        <label asp-for="Quadrant">Quadrant:</label>
        <input type="number" min="1" max="4" asp-for="Quadrant" /><br />

        <label asp-for="CategoryId">Category:</label>

        <select asp-for="CategoryId">
            <option value="">Select a Category</option>
            @foreach (Category c in ViewBag.Categories)
            {
                <option value="@c.CategoryId">@c.CategoryName</option>
            }
        </select><br />

        <label asp-for="Completed">Completed</label>
        True: @Html.RadioButton("Completed", "True")
        False: @Html.RadioButton("Completed", "False")
        <br />
        <button type="submit">Submit</button>
        <div asp-validation-summary="All"></div>

    </form>
</div>