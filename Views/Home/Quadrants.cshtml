@{
    ViewData["Title"] = "Quadrants";
}

@model List<Task_>


<div class="container">
    <div class="row gx-5">
        <div class="col-8">
            <h2>Quadrant 1</h2>
            <!-- QUAD 1 -->
            <table class="table table-bordered table-striped">
                <thead class="font-weight-bold">
                    <tr>
                        <th>Category</th>
                        <th>Name</th>
                        <th>Due Date</th>
                        <th>Completed</th>
                        <td>Edit</td>
                        <td>Delete</td>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        @if (item.Quadrant == 1)
                        {
                            <tr>
                                <td>@item.Category</td>
                                <td>@item.TaskName</td>
                                <td>@item.DueDate</td>
                                <td>@item.Completed</td>
                                <td>
                                    <a asp-controller="Home" asp-action="Edit" asp-route-applicationid="@item.TaskId">
                                        Edit
                                    </a>
                                </td>
                                <td>
                                    <a asp-controller="Home" asp-action="Delete" asp-route-applicationid="@item.TaskId">
