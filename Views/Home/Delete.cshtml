@{
    ViewData["Title"] = "Delete";
}

@model Mission08_0208.Models.Task_

<h2>Confirm Deletion</h2>
<h3>Are you sure you want to delete the entry for @Model.TaskName?</h3>

<form asp-action="Delete" method="post">
    <button type="submit">
        Delete
    </button>
    <a asp-controller="Home" asp-action="Quadrants" class="btn btn-primary">
        Cancel
    </a>

    <input type="hidden" asp-for="TaskId" />
</form>